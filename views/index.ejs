<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Home</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <nav class="navbar">
        <div class="nav-container">
            <a href="/blogs" class="logo">MyBlog</a>
            <div class="nav-links">
                <a href="/blogs" class="active">Home</a>
                <a href="/blogs/add">Add Blog</a>
                <% if (isAuthenticated) { %>
                    <div class="profile-dropdown">
                        <button class="profile-btn" onclick="toggleDropdown(event)">
                            <span class="profile-username">
                                <%= username %>
                            </span>
                            <svg height="20" width="20" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd"
                                    d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                    clip-rule="evenodd" />
                            </svg>
                        </button>
                        <div class="dropdown-content" id="profileDropdown">
                            <a href="/logout">Logout</a>
                        </div>
                    </div>
                    <% } else { %>
                        <a href="/login">Login</a>
                        <% } %>
            </div>
        </div>
    </nav>
    <div class="container">
        <h1 class="section-title">Latest Blogs</h1>
        <div class="blog-list">
            <% blogs.forEach(function(blog) { %>
                <a href="/blogs/<%= blog._id %>" class="blog-card-link">
                    <div class="blog-card">
                        <% if (blog.image) { %>
                            <img src="/<%= blog.image.replace('\\', '/') %>" alt="Blog Image" class="blog-image">
                            <% } %>
                                <div class="blog-card-content">
                                    <h2>
                                        <%= blog.title %>
                                    </h2>
                                    <p class="blog-meta">By Admin | <%= blog.createdAt.toLocaleDateString() %>
                                    </p>
                                    <p>
                                        <%= blog.content.length> 120 ? blog.content.substring(0, 120) + '...' :
                                            blog.content %>
                                    </p>
                                    <div class="blog-actions">
                                        <span class="read-more-btn">Read More</span>
                                        <% if (isAuthenticated) { %>
                                            <a href="/blogs/update?updateId=<%= blog._id %>" class="edit-btn">Edit</a>
                                            <a href="/blogs/delete/<%= blog._id %>" class="delete-btn"
                                                onclick="return confirm('Are you sure you want to delete this blog?');">Delete</a>
                                            <% } %>
                                    </div>
                                </div>
                    </div>
                </a>
                <% }) %>
        </div>
    </div>
    <footer class="footer">
        <p>&copy; 2024 MyBlog. All rights reserved.</p>
    </footer>
    <script>
        function toggleDropdown(event) {
            event.stopPropagation();
            var dropdown = document.getElementById('profileDropdown');
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        }
        document.addEventListener('click', function () {
            var dropdown = document.getElementById('profileDropdown');
            if (dropdown) dropdown.style.display = 'none';
        });
    </script>
</body>

</html>